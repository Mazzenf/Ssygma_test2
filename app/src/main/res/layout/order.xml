<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">




    <ImageView
        android:id="@+id/orderBackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/backbtn" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/open_sans"
        android:text="SYGMA"
        android:textAllCaps="false"
        android:textColor="@color/main"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/open_sans"
        android:text="Order"
        android:textColor="@color/main"
        android:textSize="24sp"
        android:textStyle="bold" />

        <TextView
            android:id="@+id/order_selected_vehicle_days"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:text="BMW X7 2021"
            android:textColor="@color/main"
            android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/optionsLinear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/orderRequiredDocuments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/order_selected_vehicle_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:fontFamily="@font/open_sans"
                    android:text="BMW X7 2021"
                    android:textColor="@color/main"
                    android:textSize="20sp" />



                <TextView
                    android:id="@+id/order_selected_vehicle_price"
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_gravity="right"
                    android:fontFamily="@font/open_sans"
                    android:text="120 JOD"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="370dp"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/order_required_documents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:orientation="horizontal"
       >

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="54dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="35dp"

            android:layout_weight="1"
            app:srcCompat="@drawable/document_ic" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="35dp"
            android:fontFamily="@font/open_sans"
            android:text="Required Documents"
            android:textAllCaps="false"
            android:textColor="@color/main"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/open_sans"
            android:text="Total"
            android:textAllCaps="false"
            android:textColor="@color/main"
            android:textSize="18sp" />



        <View
            android:id="@+id/view"
            android:layout_width="370dp"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView23623"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/open_sans"
                android:text="Options"
                android:textAllCaps="false"
                android:textColor="@color/main"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/order_options"
                android:layout_width="match_parent"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/open_sans"
                android:text="5.90 JOD"
                android:textAllCaps="false"
                android:textColor="@color/main"
                android:textSize="16sp" />

        </LinearLayout>



        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/open_sans"
                android:text="To Pay"
                android:textAllCaps="false"
                android:textColor="@color/main"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/order_topay"
                android:layout_width="match_parent"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/open_sans"
                android:text="62.80 JOD"
                android:textAllCaps="false"
                android:textColor="@color/main"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            >

            <Button
                android:id="@+id/order_checkout_btn"
                android:layout_width="365dp"
                android:layout_height="65dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="25dp"
                android:text="Checkout"
                android:textSize="25dp" />
        </RelativeLayout>

    </LinearLayout>



</ScrollView>